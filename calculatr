  <title>Simple Calculator</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: linear-gradient(135deg, #4f46e5, #9333ea);
      font-family: Arial, sans-serif;
    }
    .calculator {
      background: #fff;
      padding: 20px;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.25);
      width: 320px;
    }
    #display {
      width: 100%;
      height: 60px;
      font-size: 24px;
      text-align: right;
      margin-bottom: 20px;
      padding: 10px;
      border: none;
      border-radius: 8px;
      background: #f3f4f6;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }
    button {
      padding: 20px;
      font-size: 18px;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s;
    }
    button:hover {
      opacity: 0.9;
    }
    .operator {
      background: #facc15;
    }
    .equal {
      background: #22c55e;
      color: #fff;
      grid-column: span 2;
    }
    .clear {
      background: #ef4444;
      color: #fff;
      grid-column: span 2;
    }
    .number {
      background: #e5e7eb;
    }
  </style>
